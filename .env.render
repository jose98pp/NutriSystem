# ========================================
# EJEMPLO DE VARIABLES DE ENTORNO PARA RENDER
# ========================================
# Copia estas variables en el dashboard de Render
# y ajusta los valores según tu configuración

# ========================================
# APLICACIÓN
# ========================================
APP_NAME="Sistema Nutricional"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://tu-app.onrender.com
APP_KEY=base64:GENERA_ESTO_CON_php_artisan_key:generate

# ========================================
# BASE DE DATOS
# ========================================
# Render autocompletará estos valores desde la base de datos
DB_CONNECTION=mysql
DB_HOST=
DB_PORT=3306
DB_DATABASE=nutricion_fusion
DB_USERNAME=
DB_PASSWORD=

# ========================================
# SESIONES Y CACHÉ
# ========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
CACHE_DRIVER=database
QUEUE_CONNECTION=database

# ========================================
# SANCTUM (Autenticación)
# ========================================
# Reemplaza con tu dominio de Render
SANCTUM_STATEFUL_DOMAINS=tu-app.onrender.com
SESSION_DOMAIN=.tu-app.onrender.com

# ========================================
# ASSETS
# ========================================
# Reemplaza con tu URL de Render
ASSET_URL=https://tu-app.onrender.com

# ========================================
# LOGS
# ========================================
LOG_CHANNEL=stack
LOG_LEVEL=error

# ========================================
# MAIL (Opcional - Configura si usas email)
# ========================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"
